<%- include('../../../partials/header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-10">

                <div class="card card-body mx-5 my-3 mb-5">
                    <h4 class="text-primary">
                        <%= title %>
                    </h4>
                    <form action="/posts/edit/<%= post._id %>" method="POST" enctype="multipart/form-data">
                        <div class="form-group my-3">
                            <label for="title">Enter your post title</label>
                            <input type="text" name="title" id="title" value="<%= post.title %>"
                                class="form-control <%= error.title ? 'is-invalid' : '' %>">
                            <div class="invalid-feedback">
                                <%= error.title %>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="tiny-mce-post-body">Enter your post body</label>
                            <textarea name="body" id="tiny-mce-post-body"
                                class="form-control <%= error.body ? 'is-invalid' : '' %>"><%= post.body %></textarea>
                            <div class="invalid-feedback">
                                <%= error.body %>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="tags">Enter some tags (Max 10)</label>
                            <input type="text" name="tags" id="tags"
                                value="<%= post.tags.length > 0 ? post.tags.join(', ') : '' %>" class="form-control"
                                placeholder="tag1, tag2, tag3">
                        </div>

                        <% if(post.thumbnail) { %>
                            <label>Post thumbnail</label>
                            <img src="<%= post.thumbnail %>" alt="post thumbnail" id="thumbnail" class="img-fluid mb-3">
                            <% } %>

                                <div class="input-group mb-3">
                                    <input type="file" name="post-thumbnail" class="form-control" id="inputGroupFile">
                                    <label class="input-group-text" for="inputGroupFile">Upload</label>
                                </div>

                                <input type="submit" class="btn btn-primary" value="Update Post">
                                <a class="btn btn-danger" href="/posts/delete/<%= post._id %>">
                                    Delete Post
                                </a>
                    </form>
                </div>

            </div>
        </div>

    </div>

    <%- include('../../../partials/footer.ejs') %>

        <script src="https://cdn.tiny.cloud/1/3702vjg26ub974q8mqebkz9ksgujnprpiuq1ximi92cvgd8b/tinymce/5/tinymce.min.js"
            referrerpolicy="origin"></script>

        <%- include('../../../partials/bootstrapCdnJs.ejs') %>

            <script src="/scripts/tinymce.js"></script>

            </body>

            </html>