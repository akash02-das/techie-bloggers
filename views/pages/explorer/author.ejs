<%- include('../../partials/header.ejs') %>

    <div class="container my-3">
        <div class="row m-5">

            <div class="col-md-3">
                <img src="<%= author.profilePics %> " class="img-thumbnail img-fluid">
            </div>

            <div class="col-md-9">
                <div>
                    <p class="lead">
                        <span class="text-primary">Name:</span>
                        <%= author.profile.name %>
                    </p>
                    <p class="lead">
                        <span class="text-primary">Title:</span>
                        <%= author.profile.title %>
                    </p>
                    <p class="lead">
                        <span class="text-primary">Bio:</span>
                    <p>
                        <%= author.profile.bio %>
                    </p>
                    </p>

                    <div>
                        <h5 class="text-primary">Social Links:</h5>
                        <% if(author.profile.links.website) { %>
                            <span class="m-2">
                                <a href="<%= author.profile.links.website %>" target="_blank">
                                    <i class="fab fa-internet-explorer fa-2x"></i>
                                </a>
                            </span>
                            <% } %>
                                <% if(author.profile.links.facebook) { %>
                                    <span class="m-2">
                                        <a href="<%= author.profile.links.facebook %>" target="_blank">
                                            <i class="fab fa-facebook-square fa-2x"></i>
                                        </a>
                                    </span>
                                    <% } %>
                                        <% if(author.profile.links.twitter) { %>
                                            <span class="m-2">
                                                <a href="<%= author.profile.links.twitter %>" target="_blank">
                                                    <i class="fab fa-twitter-square fa-2x"></i>
                                                </a>
                                            </span>
                                            <% } %>
                                                <% if(author.profile.links.linkedIn) { %>
                                                    <span class="m-2">
                                                        <a href="<%= author.profile.links.linkedIn %>" target="_blank">
                                                            <i class="fab fa-linkedin fa-2x"></i>
                                                        </a>
                                                    </span>
                                                    <% } %>
                                                        <% if(author.profile.links.github) { %>
                                                            <span class="m-2">
                                                                <a href="<%= author.profile.links.github %>"
                                                                    target="_blank">
                                                                    <i class="fab fa-github fa-2x"></i>
                                                                </a>
                                                            </span>
                                                            <% } %>
                    </div>
                </div>

                <div class="mt-4">
                    <h5 class="text-primary">Posts Created By This Author:</h5>
                    <div class="row">
                        <% if (author.profile.posts.length===0) { %>
                            <div class="text-center text-muted">
                                <p>There is no posts available</p>
                            </div>
                            <% } else { %>
                                <% for (let post of author.profile.posts.reverse()) { %>
                                    <div class="card col-sm-5 m-2">
                                        <% if (post.thumbnail) { %>
                                            <img src="<%= post.thumbnail %>" alt="<%= post.title %>"
                                                class="card-img-top mt-3">
                                            <% } %>
                                                <div class="card-body p-0">
                                                    <a href="/explorer/<%= post._id %>" class="text-dark card-link">
                                                        <p class="my-2">
                                                            <%= post.title %>
                                                        </p>
                                                    </a>
                                                </div>
                                    </div>
                                    <% } %>
                                        <% } %>
                    </div>
                </div>


            </div>
        </div>
    </div>


    <div style="margin-top: 315px;">
        <%- include('../../partials/footer.ejs') %>
    </div>

    <%- include('../../partials/bootstrapCdnJs.ejs') %>

        </body>

        </html>