<%- include('../../partials/header.ejs') %>

    <div class="container my-3">
        <div class="row">
            <div class="col-md-6 offset-md-3">

                <div class="d-flex">
                    <div>
                        <img src="<%= author.profilePics %> " class="img-thumbnail img-fluid">
                    </div>
                    <div>
                        Name: <strong>
                            <%= author.profile.name %>
                        </strong>
                        Title: <strong>
                            <%= author.profile.title %>
                        </strong>
                        Bio: <p>
                            <%= author.profile.bio %>
                        </p>

                        <div>
                            <% if(author.profile.links.website) { %>
                                <span>
                                    <a href="<%= author.profile.links.website %>" target="_blank">
                                        <i class="fab fa-internet-explorer"></i>
                                    </a>
                                </span>
                                <% } %>
                                    <% if(author.profile.links.facebook) { %>
                                        <span>
                                            <a href="<%= author.profile.links.facebook %>" target="_blank">
                                                <i class="fab fa-facebook-square"></i>
                                            </a>
                                        </span>
                                        <% } %>
                                            <% if(author.profile.links.twitter) { %>
                                                <span>
                                                    <a href="<%= author.profile.links.twitter %>" target="_blank">
                                                        <i class="fab fa-twitter-square"></i>
                                                    </a>
                                                </span>
                                                <% } %>
                                                    <% if(author.profile.links.linkedIn) { %>
                                                        <span>
                                                            <a href="<%= author.profile.links.linkedIn %>"
                                                                target="_blank">
                                                                <i class="fab fa-linkedin"></i>
                                                            </a>
                                                        </span>
                                                        <% } %>
                                                            <% if(author.profile.links.github) { %>
                                                                <span>
                                                                    <a href="<%= author.profile.links.github %>"
                                                                        target="_blank">
                                                                        <i class="fab fa-github"></i>
                                                                    </a>
                                                                </span>
                                                                <% } %>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>


    <div style="margin-top: 315px;">
        <%- include('../../partials/footer.ejs') %>
    </div>

    <%- include('../../partials/bootstrapCdnJs.ejs') %>

        </body>

        </html>