<%- include('../../partials/header.ejs') %>

    <div class="container my-3">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <section class="my-3 text-center">
                    <a href="/explorer?filter=latest"
                        class="btn <%= filter==='latest' ? 'btn-primary' : 'btn-secondary' %> btn-sm">Latest</a>
                    <a href="/explorer?filter=week"
                        class="btn <%= filter==='week' ? 'btn-primary' : 'btn-secondary' %> btn-sm">Week</a>
                    <a href="/explorer?filter=month"
                        class="btn <%= filter==='month' ? 'btn-primary' : 'btn-secondary' %> btn-sm">Month</a>
                    <a href="/explorer?filter=all"
                        class="btn <%= filter==='all' ? 'btn-primary' : 'btn-secondary' %> btn-sm">All</a>
                </section>
                <section class="my-3">
                    <% if(posts.length===0) { %>
                        <p class="text-center text-muted">There is no posts available</p>
                        <% } else { %>
                            <% for(let post of posts) { %>
                                <div class="card card-body mb-3">
                                    <% if(post.thumbnail) { %>
                                        <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="img-fluid mb-2">
                                        <% } %>
                                            <a href="/explorer/<%= post._id %>" class="card-link text-dark">
                                                <h6>
                                                    <%= post.title %>
                                                </h6>
                                                <p class="mb-4">
                                                    <%= truncate(post.body) %>
                                                </p>
                                            </a>
                                            <div class="d-flex">
                                                <small>
                                                    <%= moment(post.createdAt) %> |
                                                        Posted by <a href="/author/<%= post.author._id %>">
                                                            <%= post.author.username %>
                                                        </a> |
                                                        <%= post.readTime %>
                                                </small>
                                            </div>
                                </div>
                                <% } %>
                                    <% } %>
                </section>
            </div>
        </div>
    </div>






    <%- include('../../partials/footer.ejs') %>

