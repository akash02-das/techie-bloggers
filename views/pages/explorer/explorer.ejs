<%- include('../../partials/header.ejs') %>

    <div class="container my-3">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <section class="my-3 text-center">
                    <a href="/explorer?filter=latest"
                        class="btn <%= filter==='latest' ? 'btn-primary' : 'btn-secondary' %> btn-sm">Latest</a>
                    <a href="/explorer?filter=week"
                        class="btn <%= filter==='week' ? 'btn-primary' : 'btn-secondary' %> btn-sm">Week</a>
                    <a href="/explorer?filter=month"
                        class="btn <%= filter==='month' ? 'btn-primary' : 'btn-secondary' %> btn-sm">Month</a>
                    <a href="/explorer?filter=all"
                        class="btn <%= filter==='all' ? 'btn-primary' : 'btn-secondary' %> btn-sm">All</a>
                </section>
                <section class="my-3">
                    <% if(posts.length===0) { %>
                        <p class="text-center text-muted">There is no posts available</p>
                        <% } else { %>
                            <% for(let post of posts) { %>
                                <div class="card card-body mb-3">
                                    <% if(post.thumbnail) { %>
                                        <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="img-fluid mb-2">
                                        <% } %>
                                            <a href="/explorer/<%= post._id %>" class="card-link text-dark">
                                                <h6>
                                                    <%= post.title %>
                                                </h6>
                                                <p class="mb-4">
                                                    <%= truncate(post.body) %>
                                                </p>
                                            </a>
                                            <div class="d-flex justify-content-between">
                                                <small>
                                                    <%= moment(post.createdAt) %> |
                                                        Posted by <a href="/author/<%= post.author._id %>">
                                                            <%= post.author.username %>
                                                        </a> |
                                                        <%= post.readTime %>
                                                </small>

                                                <% if(user) { %>
                                                    <span class="bookmark" data-post="<%= post._id %> ">
                                                        <% if(bookmarks.includes(post._id)) { %>
                                                            <i class="fas fa-bookmark"></i>
                                                            <% } else { %>
                                                                <i class="far fa-bookmark"></i>
                                                                <% } %>
                                                    </span>
                                                    <% } %>


                                            </div>
                                </div>
                                <% } %>
                                    <% } %>
                </section>

                <% if(totalPage> 1) { %>
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                <a class="page-link"
                                    href="<%= `/explorer?filter=${filter}&page=${currentPage - 1}` %> ">Previous</a>
                            </li>

                            <% for(let i=1; i<=totalPage; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="<%= `/explorer?filter=${filter}&page=${i}` %> ">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>

                                    <li class="page-item <%= currentPage === totalPage ? 'disabled' : '' %>">
                                        <a class="page-link"
                                            href="<%= `/explorer?filter=${filter}&page=${currentPage + 1}` %> ">Next</a>
                                    </li>
                        </ul>
                    </nav>
                    <% } %>

            </div>
        </div>
    </div>






    <%- include('../../partials/footer.ejs') %>

        <%- include('../../partials/bootstrapCdnJs.ejs') %>

            <script src="/scripts/bookmarks.js"></script>


            </body>

            </html>